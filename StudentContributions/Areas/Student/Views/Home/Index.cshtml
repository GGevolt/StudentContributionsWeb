@using StudentContributions.Models.ViewModels;
@model List<HomeTestVM>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Student Contributions</title>
    <style>
        .banner img {
            width: 100%;
            height: 200px;
            object-fit: cover; /* Đảm bảo hình ảnh luôn vừa vặn với kích thước của banner */
        }

        .images {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* Căn giữa các hình ảnh */
            gap: 10px; /* Khoảng cách giữa các hình ảnh */
        }

        .image-container {
            flex: 1 0 30%; /* Điều chỉnh tỷ lệ này để thay đổi kích thước của hình ảnh */
            margin: 5px;
            max-width: 30%; /* Giới hạn chiều rộng tối đa của hình ảnh */
        }

            .image-container img {
                width: 100%;
                height: auto;
            }
    </style>
</head>
<body>
    <div class="banner">
        <img src="~/img/2023 6月 角巻わため oridays先生.png" alt="Banner" />
    </div>
    <div id="list_magzine">
        @{
            var urls = new List<string>
        {
        Url.Action("Index", "Magazine", new { area = "Admin" }),
        Url.Action("Index", "Magazine", new { area = "Admin" }),
        Url.Action("Index", "Magazine", new { area = "Admin" })
        };
        }
        <div class="images">
            @{
                int count = 1;
            }
            @foreach (var url in urls)
            {
                <div class="image-container">
                    <a href="@url">
                        <img src="~/img/2023 12月 角巻わため みかん。先生.png" alt="Magazine @count" />
                        <center>Magazine @count</center>
                    </a>
                </div>
                count++;
            }
        </div>
        </div>
</body>
</html>



