@model StudentContributions.Models.Models.Contribution
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<div class="container mt-5">
    <h3>Are you sure you want to delete this contribution?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                <b>@Html.DisplayNameFor(model => model.Title)</b>
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3">
                <b>@Html.DisplayNameFor(model => model.SubmissionDate)</b>
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SubmissionDate)
            </dd>
            <dt class="col-sm-3">
                <b>@Html.DisplayNameFor(model => model.Comment)</b>
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-3">
                <b>@Html.DisplayNameFor(model => model.Contribution_Status)</b>
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Contribution_Status)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
