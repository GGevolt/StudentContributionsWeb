@model StudentContributions.Models.Models.Contribution

@{
    ViewData["Title"] = "Create";
}
<partial name="_Notification" />
<h2>Create Contribution</h2>

<div class="container mt-5">
    <h2 class="text-center">Create Contribution</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="form-label"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contribution_Status" class="form-label"></label>
            <select asp-for="Contribution_Status" class="form-control">
                <option value="">-- Select Status --</option>
                <option value="Submitted">Submitted</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>
            <span asp-validation-for="Contribution_Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MagazineID" class="form-label"></label>
            <input asp-for="MagazineID" class="form-control" />
            <span asp-validation-for="MagazineID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="files" class="form-label">Upload Files</label>
            <input type="file" name="files" id="files" class="form-control" multiple>
        </div>

        <div class="form-group form-check">
            <input id="check" name="checkbox" type="checkbox" class="form-check-input" />
            <label for="checkbox" class="form-check-label">I agree to the Terms of Service and Privacy Policy</label>
        </div>

        <div class="form-group">
            <input id="checkSubmit" type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
