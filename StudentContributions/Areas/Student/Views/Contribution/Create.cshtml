@model StudentContributions.Models.Models.Contribution

@{
    ViewData["Title"] = "Create";
}
<partial name="_Notification" />
<h2>Create Contribution</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contribution_Status" class="control-label"></label>
        <select asp-for="Contribution_Status" class="form-control">
            <option value="">-- Select Status --</option>
            <option value="Submitted">Submitted</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
        <span asp-validation-for="Contribution_Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MagazineID" class="control-label"></label>
        <input asp-for="MagazineID" class="form-control" />
        <span asp-validation-for="MagazineID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="checkbox">
            <input id="check" name="checkbox" type="checkbox" />
            <label for="checkbox">I agree to the Terms of Service and Privacy Policy</label>
        </div>
        <input id="checkSubmit" type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
