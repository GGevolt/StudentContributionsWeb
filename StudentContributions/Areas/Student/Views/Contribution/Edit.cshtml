@model StudentContributions.Models.Models.Contribution

@{
    ViewData["Title"] = "Edit Contribution";
}

<h2 class="page-title">@ViewData["Title"]</h2>
<head>
    <style>
        /* Style for notification */
        .notification {
            display: none;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 16px;
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1;
        }
    </style>
</head>
<form asp-action="Edit" asp-area="Student" asp-controller="Contribution" method="post" class="edit-form">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubmissionDate" class="control-label">Submission Date</label>
        <input asp-for="SubmissionDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="SubmissionDate" class="text-danger"></span>
    </div>
    @if (this.User.IsInRole("Coordinator"))
    {
        <div class="form-group">
            <label asp-for="Comment" class="control-label">Comments</label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            
        
        
    </div>
    }else{
    <input type="hidden" asp-for="Comment" />
    <input type="hidden" asp-for="UserID" />
    <input type="hidden" asp-for="Contribution_Status" />
    }
        <input asp-for="MagazineID" class="form-control" hidden/>

    <div class="form-group action-buttons">

        <button class="btn btn-primary" id="saveBtn" type="submit">Save</button>
        <a asp-controller="Contribution" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">Cancel</a>
        <a asp-controller="Contribution" asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">Back to List</a>
    </div>
    <div id="notification" class="notification"></div>

    <script>
        document.getElementById("saveBtn").addEventListener("click", function () {
            // Show notification
            var notification = document.getElementById("notification");
            notification.style.display = "block";
            notification.innerHTML = "Save successful";

            setTimeout(function () {
                notification.style.display = "none";
            }, 30000);
        });
    </script>
</form>
