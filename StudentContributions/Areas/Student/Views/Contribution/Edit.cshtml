@model StudentContributions.Models.Models.Contribution

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Contribution</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubmissionDate" class="control-label"></label>
        <input asp-for="SubmissionDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="SubmissionDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Comments</label>
        @for (int i = 0; i < Model.Comment.Count; i++)
        {
            <textarea asp-for="Comment[i]" class="form-control"></textarea>
        }
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Contribution_Status" class="control-label"></label>
        <select asp-for="Contribution_Status" class="form-control">
            <option value="Submitted">Submitted</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
        <span asp-validation-for="Contribution_Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MagazineID" class="control-label"></label>
        <input asp-for="MagazineID" class="form-control" />
        <span asp-validation-for="MagazineID" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
