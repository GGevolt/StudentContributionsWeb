@model StudentContributions.Models.Models.Contribution

@{
    ViewData["Title"] = "Edit Contribution";
}

<h2 class="page-title">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="edit-form">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubmissionDate" class="control-label">Submission Date</label>
        <input asp-for="SubmissionDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="SubmissionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Comments</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contribution_Status" class="control-label">Contribution Status</label>
        <select asp-for="Contribution_Status" class="form-control">
            <option value="">Select Status...</option>
            <option value="Submitted">Wait for Approval</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
        <span asp-validation-for="Contribution_Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MagazineID" class="control-label">Magazine ID</label>
        <input asp-for="MagazineID" class="form-control" />
        <span asp-validation-for="MagazineID" class="text-danger"></span>
    </div>

    <div class="form-group action-buttons">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-secondary">Cancel</a>
    </div>
</form>
