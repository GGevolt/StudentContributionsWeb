@model StudentContributions.Models.Models.Faculty

@{
    ViewData["Title"] = "Create Faculty";
}
<div class="col-md-8 offset-md-2">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" class="container shadow" style="padding:5px">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group" style="display: flex; justify-content: space-between; margin-top: 5px">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</div>