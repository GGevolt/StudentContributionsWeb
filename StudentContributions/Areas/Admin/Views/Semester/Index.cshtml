@model IEnumerable<StudentContributions.Models.Models.Semester>

@{
    ViewData["Title"] = "Index";
}
<div class="col-md-8 offset-md-2" style="padding-top:5px">
    <div style="display: flex; justify-content: space-between;">
        <h2>Semesters</h2>
        <a asp-action="Create" class="btn btn-primary" style="margin-bottom: 5px">Create New Semester</a>
    </div>
    <div class="table-responsive">
        <table class="table table-borderless table-hover overflow-hidden rounded-table border shadow">
            <thead class="table-active">
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Is Active?</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>